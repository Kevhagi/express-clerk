{
  "name": "clerk-express-quickstart",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc --build --clean",
    "build:deploy": "tsc --build --clean && npm run sequelize:migrate",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "sequelize:drop:all": "npx sequelize-cli db:migrate:undo:all",
    "sequelize:migrate": "npx sequelize-cli db:migrate"
  },
  "dependencies": {
    "@clerk/express": "^1.7.7",
    "@types/express": "^4.17.23",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.19.4"
  }
}
